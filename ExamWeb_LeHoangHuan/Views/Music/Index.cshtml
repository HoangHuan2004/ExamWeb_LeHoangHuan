@model List<DiaNhac>

<partial name="_ThongBao" />

<div class="row">
    <div class="col-md-6">
        <h2>Danh Sách Đĩa Nhạc</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            Thêm đĩa nhạc mới
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tựạ CD</th>
            <th>Thể Loại</th>
            <th>Giá Bán </th>
            <th>Số Lượng </th>
            <th>Action </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.TuaCD</td>
                <td>@(x.TrongNuoc?"trong nước":"Nước Ngoài")</td>
                <td>@x.GiaBan</td>
                <td>@x.SoLuong</td>
                <td>
                    <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-success">
                        Sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger">
                        Xoá
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="alert alert-info pt-2">
    Có <b>@ViewBag.SUM </b> đĩa nhạc trong kho
